{
  "name": "electron-player",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "build/electron/App.js",
  "productName": "Music Player built with Electron",
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.0.0-rc.1",
    "@mui/material": "^5.0.0-rc.1",
    "colorthief": "^2.3.2",
    "howler": "^2.2.3",
    "music-metadata": "^7.11.4",
    "nedb": "^1.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.5.4"
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "electron-player",
      "owner": "Rocker2102"
    }
  },
  "scripts": {
    "build-react": "react-scripts build",
    "build-electron": "./node_modules/.bin/tsc -p \"electron\"",
    "start-react": "set BROWSER=none && react-scripts start",
    "prestart-electron": "npm run build-electron",
    "start-electron": "electron .",
    "start": "npm run start-electron",
    "prebuild": "npm run lint && npm run build-react",
    "build": "npm run build-electron",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prepackage": "npm run build",
    "package": "electron-builder build --win -c.extraMetadata.main=build/electron/App.js --publish never",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint-and-fix": "eslint . --ext .js,.ts,.tsx --fix"
  },
  "homepage": "./",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/electron": "^1.6.10",
    "@types/howler": "^2.2.4",
    "@types/jest": "^27.4.0",
    "@types/nedb": "^1.8.12",
    "@types/node": "^17.0.14",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.28.0",
    "copyfiles": "^2.4.1",
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5",
    "music-metadata-browser": "^2.5.0",
    "web-vitals": "^2.1.2"
  }
}
